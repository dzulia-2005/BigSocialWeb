{
  "compilerOptions": {
    "target": "es2016",                          // Specify ECMAScript target version
    "module": "commonjs",                        // Use commonjs module system for Node.js
    "rootDir": "./src",                          // Specify root directory for TypeScript files
    "outDir": "./dist",                          // Output directory for compiled JavaScript files
    "esModuleInterop": true,                     // Enable interoperability between CommonJS and ES modules
    "strict": true,                              // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true,    // Enforce consistent casing in imports
    "skipLibCheck": true  ,
  },
  "include": ["src"],                            // Specify files or directories to include in the project
  "exclude": ["node_modules", "dist"]            // Exclude unnecessary folders from compilation
}
